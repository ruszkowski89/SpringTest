<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
   default-init-method="initMethod">



    <bean class="com.ruszkowski.spring.DisplayBeanName" />

    <bean id="triangle" class="com.ruszkowski.spring.Triangle" autowire="byName">
    </bean>


    <bean id="pointA" class="com.ruszkowski.spring.Point">
        <property name="x" value="${pointA.x}" />
        <property name="y" value="${pointA.y}" />
    </bean>
    <bean id="pointB" class="com.ruszkowski.spring.Point">
        <property name="x" value="20" />
        <property name="y" value="0" />
    </bean>
    <bean id="pointC" class="com.ruszkowski.spring.Point">
        <property name="x" value="0" />
        <property name="y" value="20" />
    </bean>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="filename.properties" />
    </bean>

</beans>