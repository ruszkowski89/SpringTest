<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />


    <bean id="triangle" class="com.ruszkowski.spring.Triangle">
    </bean>


    <bean id="pointA" class="com.ruszkowski.spring.Point">
        <property name="x" value="4" />
        <property name="y" value="6" />
    </bean>

    <bean id="pointB" class="com.ruszkowski.spring.Point">
        <property name="x" value="20" />
        <property name="y" value="0" />
    </bean>

    <bean id="pointC" class="com.ruszkowski.spring.Point">
        <property name="x" value="0" />
        <property name="y" value="20" />
    </bean>



    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>messages</value>
            </list>
        </property>
    </bean>

    <context:component-scan base-package="com.ruszkowski.spring" />
</beans>